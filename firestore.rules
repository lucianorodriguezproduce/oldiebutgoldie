rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Telemetry - anyone can create, anyone can read
    match /interactions/{document=**} {
      allow create, read: if true;
      allow delete: if request.auth != null;
    }
    
    // User data - only the owner
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Editorial - public read, authenticated write
    match /editorial/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Subscribers - anyone can subscribe, authenticated can read/delete
    match /subscribers/{document=**} {
      allow create: if true;
      allow read, delete: if request.auth != null;
    }

    // Leads - authenticated only
    match /leads/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Orders - public read, authenticated write/update, unauthenticated create
    match /orders/{document=**} {
      allow read, create: if true;
      allow update, delete: if request.auth != null;
    }

    // Notifications - authenticated only
    match /notifications/{document=**} {
      allow read, write, delete: if request.auth != null;
    }

    // Inventory - public read, authenticated write
    match /inventory/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Trades - authenticated only
    match /trades/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

