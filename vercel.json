{
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/proxy",
            "destination": "/api/proxy"
        },
        {
            "source": "/item/:type/:id",
            "destination": "/api/prerender"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.ts": {
            "includeFiles": "dist/**"
        }
    }
}